#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run comprehensive checks before push
echo "🔍 Running pre-push checks..."

# Type checking
echo "📝 Type checking..."
pnpm typecheck || exit 1

# Tests
echo "🧪 Running tests..."
pnpm test || exit 1

# Build check
echo "🏗️ Build check..."
pnpm build || exit 1

echo "✅ All pre-push checks passed!"
