{
  "name": "fresh",
  "private": true,
  "version": "0.1.0",
  "engines": {
    "node": "20.19.4",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "preinstall": "node scripts/check-node-version.cjs",
    "dev": "concurrently -k -n api,web -c blue,green \"pnpm dev:api\" \"pnpm dev:web\"",
    "dev:web": "pnpm --filter @apps/web dev",
    "dev:api": "pnpm --filter @services/api dev",
    "dev:all": "concurrently -n API,WEB -c cyan,magenta \"pnpm dev:api\" \"pnpm dev:web\"",
    "dev:check-node": "node scripts/check-node-version.cjs",
    "dev:restart": "./scripts/restart-dev.sh",
    "typecheck": "pnpm -r --parallel --if-present typecheck",
    "lint": "pnpm -r --parallel --if-present lint",
    "lint:fix": "pnpm -r --parallel --if-present lint -- --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "pnpm --filter @packages/types build && pnpm -r --parallel --if-present build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lighthouse": "lhci autorun",
    "analyze": "ANALYZE=true pnpm --filter @apps/web build && pnpm --filter @apps/web bundle:analyze",
    "perf:test": "node scripts/perf-test.cjs",
    "bundle:analyze": "node scripts/bundle-analyze.cjs",
    "bundle:watch": "node scripts/bundle-watch.cjs",
    "docs": "typedoc",
    "doctor": "node scripts/doctor.cjs",
    "prepare": "husky install",
    "commit:skip-hooks": "HUSKY=0 git commit -m \"skip-hooks\" --allow-empty",
    "gen:icons": "node scripts/generate-icons.cjs",
    "start": "concurrently -k -n api,web -c blue,green \"pnpm --filter @services/api start\" \"pnpm --filter @apps/web start\"",
    "start:api": "pnpm --filter @services/api start",
    "start:web": "pnpm --filter @apps/web start"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.0.1",
    "eslint": "^9.9.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lighthouse": "^12.8.2",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "semver": "^7.6.3",
    "server-only": "^0.0.1",
    "supertest": "^7.1.4",
    "typedoc": "^0.28.12",
    "vitest": "^3.2.4",
    "webpack-bundle-analyzer": "^4.10.2",
    "sharp": "^0.33.4"
  },
  "dependencies": {
    "firebase": "^12.2.1",
    "next": "15.5.2"
  },
  "pnpm": {
    "overrides": {
      "path-to-regexp": "0.1.12",
      "send": "0.19.0",
      "cookie": "0.7.0",
      "tmp": "0.2.4",
      "undici": "6.21.2"
    }
  }
}
